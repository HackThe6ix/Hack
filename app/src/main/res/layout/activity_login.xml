<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jason.hack.LoginActivity"
    android:background="@drawable/background">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/1183d82f010f7258098498f53cbac87c"
        android:orientation="vertical"
        android:paddingTop="100dp"
        android:weightSum="1"
        tools:background="@drawable/pink_shadow_background_colors_dark_65801_2048x1152"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/editText"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@drawable/edittext"
            android:fontFamily="sans-serif-condensed"
            android:hint="Enter a username to determine if this user is going through depression"
            android:singleLine="false"
            android:textColorHint="#FFFFFF"
            android:textSize="18sp" />

        <EditText
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:background="@drawable/edittext"
            android:hint="Username"
            android:singleLine="false"
            android:textColorHint="#FFFFFF" />


        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:hint="_______________________________________"
            android:singleLine="false"
            android:textColorHint="#FFFFFF" />

        <Button
            android:id="@+id/button"
            android:layout_width="351dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:layout_weight="0.02"
            android:text="Start" />

    </LinearLayout>
</RelativeLayout>


